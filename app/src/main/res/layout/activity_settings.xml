<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Accuracy_Label_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Чувствительность (м):"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/Accuracy_ID"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="visible" />

    <Switch
        android:id="@+id/Autosend_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Автоматически отправлять на браслет" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Period_Label_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Периодичность отправки (м):"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/Period_ID"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="visible" />

    <Switch
        android:id="@+id/Is_Correction_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вносить поправку в дистанцию" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Correction_Label_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Величина поправки (км):"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/Correction_ID"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="visible" />

    <Switch
        android:id="@+id/Is_Track_Simplify_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прореживание трека" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Simplify_Label_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Дистанция прореживания (м):"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/Simplify_ID"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="visible" />

    <Switch
        android:id="@+id/In_Accuracy_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выполнять поправку на точность в движении" />

</LinearLayout>